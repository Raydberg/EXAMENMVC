@model EXAMENMVC.Models.VehiculoDTO

@{
    ViewData["Title"] = "Create";
}

<div class="offset-12">
    <div class="card-header bg-dark">
        <h3 class="text-white"><strong>Crear Nuevo Vehiculo <i class="fa fa-car" aria-hidden="true"></i></strong></h3>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="form-floating mb-3">
                <input asp-for="NRO_PLACA" class="form-control" id="nro_placa" placeholder=" " />
                <label asp-for="NRO_PLACA" class="control-label" for="nro_placa">N°Placa</label>
                <span asp-validation-for="NRO_PLACA" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Marca</label>
                <select id="marcaDropdown" class="form-control" asp-items="ViewBag.Marcas">
                    <option value="">Seleccione una Marca</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Modelo</label>
                <select id="modeloDropdown" class="form-control" asp-for="ModeloIDMODELO" disabled>
                    <option value="">Seleccione un Modelo</option>
                </select>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="año" class="form-control" id="anio" placeholder="" />
                <label asp-for="año" class="control-label" for="anio">Año</label>
                <span asp-validation-for="año" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Color" class="form-control" id="color" placeholder="" />
                <label asp-for="Color" class="control-label" for="color"></label>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Imagen</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ArchivoImagen" />
                    <span asp-validation-for="ArchivoImagen" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <button class="btn btn-outline-dark" type="submit">
                    Crear Vehiculo <i class="fa fa-car" aria-hidden="true"></i>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/Jquery.js"></script>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary ml-2">Volver atrás</a>
</div>