@model EXAMENMVC.Models.Vehiculo

@{
    ViewData["Title"] = "Details";
}

  <div class="card-header bg-success">
    <h3><strong>Detalle Vehiculo <i class="fa-solid fa-car"></i></strong></h3>
</div>

<div>
    <hr />

    <form>
        <div class="mb-3">
            <label class="form-label">N°Placa</label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.NRO_PLACA)" disabled>
        </div>
        <div class="mb-3">
            <label class="form-label">Modelo</label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Modelo.NOM_MODELO)" disabled>
        </div>
        <div class="mb-3">
            <label class="form-label">Marca</label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Modelo.Marca.NOM_MARCA)" disabled>
        </div>
        <div class="mb-3">
            <label class="form-label">Año</label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.año)" disabled>
        </div>
        <div class="mb-3">
            <label class="form-label">@Html.DisplayNameFor(model => model.Color)</label>
            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Color)" disabled>
        </div>
       
    </form>

</div>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-success ml-2">Volver atrás</a>
</div>